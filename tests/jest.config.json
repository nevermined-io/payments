{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>"],
  "testMatch": ["**/unit/**/*.test.ts", "**/integration/**/*.test.ts", "**/e2e/**/*.test.ts"],
  "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.d.ts"],
  "coverageDirectory": "coverage",
  "detectOpenHandles": true,
  "forceExit": false,
  "maxWorkers": 1,
  "testTimeout": 30000,
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transformIgnorePatterns": ["node_modules/(?!(@a2a-js/sdk)/)"],
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": {
          "module": "ESNext",
          "target": "ES2020"
        }
      }
    ]
  }
}
